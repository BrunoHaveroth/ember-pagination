<nav aria-label="Page navigation">
  <ul class="pagination">
    {{#if havePrev}}
      <li {{action 'prev'}}>
        <a href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}

    {{#each page in arrayPages}}
      <li {{action 'loadNewPage' page}}>
        <a href="#">{{page}}</a>
      </li>
    {{/each}}

    {{#if haveNext}}
      <li {{action 'next'}}>
        <a href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>
